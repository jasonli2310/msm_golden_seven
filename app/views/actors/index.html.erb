<h1>List of Actors</h1>

<a href="http://localhost:3000/directors/new_form">Add a New Actor</a>

<table>
  <tr>
    <th>Thumbnail</th>
    <th>Caption</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @actors.each do |item| %>

  <tr>
    <td>
      <img src="<%= item[:image_url] %>" width="80">
    </td>
    <td>
      <%= item.bio %>
    </td>
    <td>
      <a href="http://localhost:3000/actors/<%= item.id %>">Show</a>
    </td>
    <td>
      <a href="http://localhost:3000/actors/<%= item.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/delete_actor/<%= item.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
